    <script>
        // Part√≠culas de corazones y estrellas
        function createParticles() {
            const container = document.getElementById('particle-container');
            const items = ['‚ù§Ô∏è', '‚ú®', 'üíñ', '‚≠ê'];
            for(let i=0; i<30; i++) {
                const p = document.createElement('div');
                p.className = 'particle';
                p.innerText = items[Math.floor(Math.random() * items.length)];
                p.style.left = Math.random() * 100 + 'vw';
                p.style.fontSize = (Math.random() * 20 + 10) + 'px';
                p.style.animationDuration = (Math.random() * 10 + 10) + 's';
                p.style.animationDelay = (Math.random() * 15) + 's';
                container.appendChild(p);
            }
        }
        createParticles();

        // Intro centralizada
        window.addEventListener('DOMContentLoaded', () => {
            const heart = document.getElementById('intro-heart');
            const star = document.getElementById('intro-star');
            const text = document.getElementById('intro-text');
            const overlay = document.getElementById('intro-overlay');
            const header = document.getElementById('main-header');

            function step(el, delay, showTime) {
                setTimeout(() => {
                    el.style.transition = `all 600ms cubic-bezier(0.34, 1.56, 0.64, 1)`;
                    el.style.opacity = '1'; el.style.transform = 'scale(1)';
                    setTimeout(() => { el.style.opacity = '0'; el.style.transform = 'scale(2) rotate(15deg)'; }, showTime);
                }, delay);
            }

            step(heart, 500, 1000);
            step(star, 2000, 1000);
            setTimeout(() => { text.style.transition = 'all 1000ms ease'; text.style.opacity = '1'; text.style.transform = 'scale(1.5)'; }, 3500);
            setTimeout(() => { overlay.style.opacity = '0'; 
                setTimeout(() => { 
                    overlay.style.display = 'none'; 
                    header.style.opacity = '1'; 
                    document.body.classList.add('header-visible');
                    document.body.style.overflowY = 'auto'; 
                }, 1000); 
            }, 5500);
        });

        // L√≥gica de Contrase√±a
        const passModal = document.getElementById('password-modal');
        const modalBox = document.getElementById('modal-box');
        const passInput = document.getElementById('pass-input');
        const errorMsg = document.getElementById('error-msg');
        const card = document.getElementById('valentine-card');
        const unlockPrompt = document.getElementById('unlock-prompt');

        function openModal() {
            passModal.style.display = 'flex';
            setTimeout(() => modalBox.classList.add('show'), 10);
            passInput.focus();
        }

        function closeModal() {
            modalBox.classList.remove('show');
            setTimeout(() => passModal.style.display = 'none', 300);
        }

        function checkPassword() {
            const secret = "RayEterna";
            if(passInput.value === secret) {
                // √âxito
                closeModal();
                unlockPrompt.style.opacity = '0';
                setTimeout(() => {
                    unlockPrompt.classList.add('hidden');
                    card.classList.remove('blurred-content');
                }, 500);
            } else {
                // Error
                modalBox.classList.add('shake');
                errorMsg.innerText = "Esperate al 14, no te desesperes.";
                errorMsg.classList.remove('hidden');
                setTimeout(() => modalBox.classList.remove('shake'), 400);
                passInput.value = "";
            }
        }

        // Enter para enviar pass
        passInput.addEventListener("keyup", function(event) {
            if (event.key === "Enter") checkPassword();
        });

        function navigate(target) {
            document.getElementById('hub').classList.add('hidden');
            document.getElementById('valentine').classList.add('hidden');
            document.getElementById('anniversary').classList.add('hidden');
            const el = document.getElementById(target);
            el.classList.remove('hidden');
            if(target === 'anniversary') el.classList.add('flex');
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }

        function showHub() {
            document.getElementById('valentine').classList.add('hidden');
            document.getElementById('anniversary').classList.add('hidden');
            document.getElementById('hub').classList.remove('hidden');
        }

        const targetDate = new Date("March 8, 2026 00:00:00").getTime();
        function updateCountdown() {
            const now = new Date().getTime();
            const distance = targetDate - now;
            if (distance < 0) return;
            const days = Math.floor(distance / (1000 * 60 * 60 * 24));
            const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
            const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
            const seconds = Math.floor((distance % (1000 * 60)) / 1000);
            
            const html = `
                <div class="bg-white/10 backdrop-blur-2xl p-6 rounded-[2rem] min-w-[100px] border border-white/20 shadow-2xl">
                    <span class="block text-5xl font-bold">${days.toString().padStart(2, '0')}</span>
                    <span class="text-[10px] uppercase tracking-widest opacity-60">D√≠as</span>
                </div>
                <div class="bg-white/10 backdrop-blur-2xl p-6 rounded-[2rem] min-w-[100px] border border-white/20 shadow-2xl">
                    <span class="block text-5xl font-bold">${hours.toString().padStart(2, '0')}</span>
                    <span class="text-[10px] uppercase tracking-widest opacity-60">Horas</span>
                </div>
                <div class="bg-white/10 backdrop-blur-2xl p-6 rounded-[2rem] min-w-[100px] border border-white/20 shadow-2xl">
                    <span class="block text-5xl font-bold">${minutes.toString().padStart(2, '0')}</span>
                    <span class="text-[10px] uppercase tracking-widest opacity-60">Mins</span>
                </div>
                <div class="bg-white/10 backdrop-blur-2xl p-6 rounded-[2rem] min-w-[100px] border border-white/20 shadow-2xl">
                    <span class="block text-5xl font-bold">${seconds.toString().padStart(2, '0')}</span>
                    <span class="text-[10px] uppercase tracking-widest opacity-60">Segs</span>
                </div>
            `;
            document.getElementById('countdown').innerHTML = html;
        }
        setInterval(updateCountdown, 1000);
        updateCountdown();
    </script>
</body>
